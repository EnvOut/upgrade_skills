<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
>
    <bean id="conf" class="com.tow.spring.config.InjectSimpleConfig" />
    <bean id="injectSimple" class="com.tow.spring.xml.InjectSimple" p:age="#{conf.age}" p:height="#{conf.height}" p:name="#{conf.name}" p:programmer="#{conf.programmer}" p:ageInSeconds="#{conf.ageInSeconds}" />
</beans>