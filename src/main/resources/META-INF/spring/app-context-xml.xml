<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
>
    <bean id="messageProvider" class="com.tow.spring.xml.HelloWorldMessageProvider" p:message="Сука бля!" c:strings="Конструктор сука">
        <!--<constructor-arg name="strings" value="Spring super!"/>-->
    </bean>
    <bean id="messageRenderer" class="com.tow.spring.xml.StandardOutMessageReaderer">
        <property name="messageProvider" ref="messageProvider"/>
    </bean>
</beans>